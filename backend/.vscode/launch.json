{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "NestJs Debug",
      "program": "${workspaceFolder}/src/main.ts",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "sourceMaps": true,
      "runtimeArgs": ["-r", "tsconfig-paths/register", "--inspect"],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
    }
  ]
}